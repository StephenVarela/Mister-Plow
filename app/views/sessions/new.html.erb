<div class="login-signup">
  <h1>Log in</h1>

  <%= form_tag sessions_path, :method => :post do %>
    <div class="field">
      <% label_tag :email %>
      <%= text_field_tag :email, nil, placeholder: 'E-mail' %>
    </div>
    <div class="field">
      <% label_tag :password %>
      <%= password_field_tag :password, nil, placeholder: 'Password' %>
    </div>
    <div class="actions">
      <%= submit_tag "Login", class: 'button'%>
    </div>
  <% end %>

  <%= link_to "create a new account", signup_path %>
</div>