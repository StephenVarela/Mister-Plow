<h1>Log in</h1>

<%= form_for :sessions, :method => :post do |f| %>
  <div class="field">
    <% f.label :email %>
    <%= f.text_field :email, placeholder: 'E-mail' %>
  </div>
  <div class="field">
    <% f.label :password %>
    <%= f.password_field :password, placeholder: 'Password' %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>

<%= link_to "create a new account", signup_path %>