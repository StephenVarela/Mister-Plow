<div class="landing-container">
  <div class="landing-object">
    <h1 class="landing-header">Mr Plow<h1>
    <h2 class="landing-sub-header">Welcome<h2>
    <button id="welcome-button">Sign In</button>
  </div>
</div>

<%# Hidden until modal is opened %>
<div class="modal display-none" id="sign-in-modal">
  <section class="modal-main">
    <div class="modal-top-row">
      <div class="x-close-button">x</div>
    </div>

    <%# Login form view %>
    <div class="login-form">
      <h1>Log in</h1>

      <%= form_tag sessions_path, :method => :post do %>
        <div class="field">
          <% label_tag :email %>
          <%= text_field_tag :email, nil, placeholder: 'E-mail' %>
        </div>
        <div class="field">
          <% label_tag :password %>
          <%= password_field_tag :password, nil, placeholder: 'Password' %>
        </div>
        <div class="actions">
          <%= submit_tag "Login", class: 'button' %>
        </div>
      <% end %>

      <p class="new-account">create a new account<p>
    </div>

    <%# New user form view %>
    <div class="user-form display-none">
      <h1> Sign Up </h1>
      <%= react_component 'NewUser', authenticity_token: form_authenticity_token %>
      <p class="new-login">Sign In<p>
    </div>

  </section>

</div>